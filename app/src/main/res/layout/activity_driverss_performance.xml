<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Driver_performanceActivity"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#6C3CC1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="#FFFF" />
        <TextView
            android:id="@+id/head1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:backgroundTint="#FDDE82"
            android:fontFamily="@font/fredoka_one"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:text="Rapidez"
            android:textColor="#FFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="28sp"
            />

        <TextView
            android:id="@+id/speed1"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_marginTop="31dp"
            android:backgroundTint="#FDDE82"
            android:fontFamily="@font/fredoka_one"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:text="Drivers Performance"
            android:textColor="#FFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/NewList"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#201723"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speed1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/speed_txt"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:backgroundTint="#FDDE82"
                    android:fontFamily="@font/fredoka_one"
                    android:padding="10dp"
                    android:paddingTop="20dp"
                    android:text="Accln -:"
                    android:textColor="#FFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="28sp" />
                <TextView
                    android:id="@+id/speed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:backgroundTint="#FDDE82"
                    android:fontFamily="@font/fredoka_one"
                    android:padding="10dp"
                    android:paddingTop="20dp"
                    android:text=""
                    android:textColor="#FFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="28sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ActiveLists"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#201723"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NewList">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/harshBreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:backgroundTint="#FDDE82"
                    android:fontFamily="@font/fredoka_one"
                    android:padding="10dp"
                    android:paddingTop="20dp"
                    android:text="Harsh Break - 1"
                    android:textColor="#FFFF"
                    android:textSize="28sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/overspeed"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#201723"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ActiveLists">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/overspeeding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:backgroundTint="#FDDE82"
                    android:fontFamily="@font/fredoka_one"
                    android:padding="10dp"
                    android:paddingTop="20dp"
                    android:text="OverSpeed - 3"
                    android:textColor="#FFFF"
                    android:textSize="28sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>




